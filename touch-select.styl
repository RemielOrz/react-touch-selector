/***
* Touch Select
* Author: Remiel.
***/
.touch-select
    height: 200 *$px
    position relative
    background: #fff

    .background
        pointer-events: none
        position: absolute
        top: 0
        left: 0
        bottom: 0
        right: 0
        background: linear-gradient(bottom, rgba(255,255,255,1) 0, rgba(255,255,255,0) 40%, rgba(255,255,255,0) 60%, rgba(255,255,255,1) 100%)

    .active
        transform: scale(1.3)

    &:before,&:after
        pointer-events: none
        position absolute
        font-size: 0
        height: 0
        content: ''
        z-index: 1
        top: 50%
        left: 0
        right: 0
        border-bottom: 1px solid $color_gray_border

    &:before
        margin-top: -20 *$px
    &:after
        margin-top: 20 *$px

    .item
        height: 40 *$px
        line-height: 40 *$px
        text-align: center
